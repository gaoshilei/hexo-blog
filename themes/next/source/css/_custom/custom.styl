// Custom styles.
//首页文章阴影样式
.post {
    margin-top: 15px;
    margin-bottom: 15px;
    padding: 10px;
    -webkit-box-shadow: 0 0 14px rgba(202, 203, 203, .5);
    -moz-box-shadow: 0 0 14px rgba(202, 203, 204, .5);
}

//头部背景图片
.header {
  background: url('http://oeat6c2zg.bkt.clouddn.com/Theme_Muse_header.jpg');
  background-position: center center;
  background-size: cover;
}
//文章两侧间距
.posts-expand .post {
    margin-top: 60px;
    margin-bottom: 60px;
    padding: 25px;
    -webkit-box-shadow: 0 0 5px rgba(200,210,220,.75);
    -moz-box-shadow: 0 0 5px rgba(200,210,220,.75)
}
// 行内颜色
